<turbo-stream action="prepend" target="notifications">
    <template>
        <div id="shared-notification-{{ cat.id }}" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto"><i class="fas fa-message"></i> Cat shared!</strong>
                <small class="text-muted">{{ cat.createdAt.format('H:i:s') }}</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                {{ cat.createdBy ~ ' shared a cat.' }} <br />
                Say hello to <strong>{{ cat.name }}</strong>!
            </div>
        </div>
    </template>
</turbo-stream>